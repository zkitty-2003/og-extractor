:root {
    --sidebar-bg: #202123;
    --main-bg: #343541;
    --input-bg: #40414f;
    --text-color: #ececf1;
    --user-bubble: #343541;
    --ai-bubble: #444654;
    --accent-color: #10a37f;
    --hover-color: #2a2b32;
    --border-color: #4d4d4f;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family: 'Sarabun', sans-serif;
}

body {
    background-color: var(--main-bg);
    color: var(--text-color);
    height: 100vh;
    display: flex;
    overflow: hidden;
}

/* App Container */
.app-container {
    display: flex;
    width: 100%;
    height: 100%;
}

/* Sidebar */
.sidebar {
    width: 260px;
    background-color: var(--sidebar-bg);
    display: flex;
    flex-direction: column;
    padding: 10px;
    flex-shrink: 0;
    transition: transform 0.3s ease;
}

.sidebar-top {
    flex: 1;
    overflow-y: auto;
}

.new-chat-btn {
    display: flex;
    align-items: center;
    gap: 10px;
    width: 100%;
    padding: 10px 15px;
    border: 1px solid var(--border-color);
    border-radius: 5px;
    background: transparent;
    color: white;
    cursor: pointer;
    font-size: 0.9rem;
    transition: background-color 0.2s;
    margin-bottom: 20px;
}

.new-chat-btn:hover {
    background-color: var(--hover-color);
}

.history-list {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.history-item {
    padding: 10px 15px;
    border-radius: 5px;
    cursor: pointer;
    color: var(--text-color);
    font-size: 0.9rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: background-color 0.2s;
}

.history-item:hover {
    background-color: var(--hover-color);
}

.sidebar-bottom {
    border-top: 1px solid var(--border-color);
    padding-top: 10px;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

#user-profile {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.2s;
}

#user-profile:hover {
    background-color: var(--hover-color);
}

#user-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
}

.user-info {
    flex: 1;
    overflow: hidden;
}

#user-name {
    font-size: 0.9rem;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
}

#logout-btn {
    color: #b9bbbe;
    transition: color 0.2s;
}

#logout-btn:hover {
    color: white;
}

.settings-item {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px;
    border-radius: 5px;
    position: relative;
    height: 100%;
}

.mobile-header {
    display: none;
    padding: 10px 15px;
    background-color: var(--main-bg);
    border-bottom: 1px solid var(--border-color);
    align-items: center;
    gap: 15px;
    color: white;
    font-weight: bold;
}

#mobile-menu-btn {
    cursor: pointer;
    font-size: 1.2rem;
}

/* Chat Container */
.chat-container {
    flex: 1;
    padding: 20px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: 20px;
    scroll-behavior: smooth;
    padding-bottom: 120px;
    /* Space for input area */
}

.message {
    display: flex;
    align-items: flex-start;
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
    padding: 20px;
    gap: 10px;
}

.message.ai-message {
    background-color: var(--ai-bubble);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.message.user-message {
    background-color: transparent;
}

.avatar {
    width: 30px;
    height: 30px;
    border-radius: 2px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    flex-shrink: 0;
}

.ai-message .avatar {
    background-color: var(--accent-color);
    color: white;
}

.user-message .avatar {
    background-color: #5436da;
    /* Placeholder color */
    color: white;
    display: flex;
    /* Show avatar for user in ChatGPT style */
}

.bubble {
    flex: 1;
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-color);
}

/* Input Area */
.input-area {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-image: linear-gradient(180deg, rgba(53, 55, 64, 0), #353740 58.85%);
    padding: 20px;
    display: flex;
    justify-content: center;
}

#message-input {
    width: 100%;
    max-width: 768px;
    background-color: var(--input-bg);
    border: 1px solid rgba(32, 33, 35, .5);
    color: white;
    padding: 12px 45px 12px 15px;
    /* Right padding for button */
    font-size: 1rem;
    outline: none;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

#send-btn {
    position: absolute;
    right: 30px;
    /* Adjust based on max-width centering */
    bottom: 28px;
    background: transparent;
    border: none;
    color: #8e8ea0;
    cursor: pointer;
    transition: color 0.2s;
}

@media (min-width: 800px) {
    #send-btn {
        right: calc(50% - 384px + 15px);
        /* Center alignment logic */
    }
}

#send-btn:hover {
    color: var(--text-color);
}

#send-btn i {
    font-size: 1.1rem;
}

/* Modal */
.modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 100;
    justify-content: center;
    align-items: center;
    backdrop-filter: blur(5px);
}

.modal-content {
    background-color: var(--sidebar-bg);
    padding: 30px;
    border-radius: 5px;
    width: 90%;
    max-width: 400px;
    text-align: center;
    border: 1px solid var(--border-color);
}

.modal-content h3 {
    margin-bottom: 15px;
    color: white;
}

.modal-content p {
    color: #b9bbbe;
    margin-bottom: 20px;
    font-size: 0.9rem;
}

.modal-content input {
    width: 100%;
    padding: 12px;
    margin-bottom: 20px;
    border-radius: 5px;
    border: 1px solid var(--border-color);
    background-color: var(--input-bg);
    color: white;
    font-size: 1rem;
}

.modal-content button {
    background: var(--accent-color);
    color: white;
    border: none;
    padding: 12px 25px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 600;
    width: 100%;
}

